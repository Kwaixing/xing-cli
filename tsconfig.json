{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "inlineSourceMap": true,
    "baseUrl": "./",
    "outDir": "lib",
    "declaration": true,
    "pretty": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
  ]
}